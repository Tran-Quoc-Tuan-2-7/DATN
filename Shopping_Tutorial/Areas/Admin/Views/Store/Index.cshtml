@model IEnumerable<StoreModel>
@{
    ViewData["title"] = "Thông tin cửa hàng";
}
<h3>Thông tin cửa hàng</h3>
<a asp-action="Create" asp-controller="Store" class="btn btn-primary">
    <i class="fa fa-plus"></i>Thêm cửa hàng
</a>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th scope="col">Tên shop</th>
            <th scope="col">Địa chỉ</th>

            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Address)</td>
                <td>
                    <a asp-action="Edit" asp-controller="Store" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Store" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }

        @if (ViewBag.Pager != null)
        {
            var pager = ViewBag.Pager as Paginate;
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (pager.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pg=@(pager.CurrentPage - 1)">Trước</a>
                        </li>
                    }

                    @for (int i = pager.StartPage; i <= pager.EndPage; i++)
                    {
                        <li class="page-item @(i == pager.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?pg=@i">@i</a>
                        </li>
                    }

                    @if (pager.CurrentPage < pager.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pg=@(pager.CurrentPage + 1)">Sau</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </tbody>
</table>
