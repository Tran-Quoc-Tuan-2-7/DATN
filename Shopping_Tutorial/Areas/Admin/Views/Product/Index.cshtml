@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Danh sách sản phẩm";
}
<h3>Danh mục sản phẩm</h3>
<a asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Từ khóa</th>
            <th scope="col">Phân loại</th>
            <th scope="col">Thương hiệu</th>
            <th scope="col">Quản lí sản phẩm</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@Html.Raw(item.Description)</td>
            <td>@item.Price</td>
            <td><img src="~/media/products/@item.Image" width="100" height="80" /></td>
            <td>@item.Slug</td>
            <td>@item.Category.Name</td>
            <td>@item.Brand.Name</td>
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
            </td>
            </tr>
        }
    </tbody>
</table>
