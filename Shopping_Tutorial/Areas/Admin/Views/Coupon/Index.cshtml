@model CouponModel
@{
	ViewData["title"] = "Thêm mã giảm giá";
}
<h4>Thêm mã giảm giá</h4>
<div class="col-md-9">
	<form asp-action="Create" autocomplete="off" asp-controller="Coupon" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Tên thương hiệu</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>


		<div class="form-group">
			<label>Mô tả</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Ngày bắt đầu</label>
			<input asp-for="DateStart" class="form-control" />
			<span asp-validation-for="DateStart" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Ngày hết hạn</label>
			<input asp-for="DateEnd" class="form-control" />
			<span asp-validation-for="DateEnd" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Trạng thái</label>
			<select asp-for="Status" class="form-control">
				<option value="1">Hiển thị </option>
				<option value="0">Ẩn </option>

			</select>
			<span asp-validation-for="Status" class="text-danger" />
		</div>

		<div class="form-group">
			<button class="btn btn-primary">Tạo</button>
		</div>
	</form>

	<h4>Danh sách mã giảm giá</h4>
	<table class="table table-striped" id="myTable">
		<thead>
			<tr>
				<th>Tên</th>
				<th>Mô tả</th>
				<th>Ngày bắt đầu</th>
				<th>Ngày hết hạn</th>
				<th>Số lượng</th>
				<th>Hành động</th>
				<th>Trạng thái</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var coupon in ViewBag.Coupons)
			{
				<tr>
					<td>@coupon.Name</td>
					<td>@coupon.Description</td>
					<td>@coupon.DateStart.ToString("dd-MM-yyyy")</td>
					<td>@coupon.DateEnd.ToString("dd-MM-yyyy")</td>
					<td>@coupon.Quantity</td>
					<td>
						@if (@coupon.Status == 1)
						{
							<select name="Status">
								<option selected value="1">Kích hoạt</option>
								<option value="0">Ẩn</option>
							</select>
						}
						else
						{
							<select name="Status">
								<option value="1">Kích hoạt</option>
								<option selected value="0">Ẩn</option>
							</select>
						}
					</td>

					<td>
						@if (coupon.DateEnd < DateTime.Now)
						{
							<span class="text-area text-danger">Hết hạn</span>
						}
						else
						{
							TimeSpan remainingTime = coupon.DateEnd - DateTime.Now;
							int daysRemaining = remainingTime.Days;
							@if (daysRemaining == 0)
							{
								<span class="text text-danger">Hôm nay</span>
							}
							else
							{
								<span class="text text-success">@($"{daysRemaining} ngày nữa")</span>
							}
						}
					</td>

				</tr>
			}
		</tbody>
	</table>

</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}