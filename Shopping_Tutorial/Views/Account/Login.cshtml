@model LoginViewModel
@{
	ViewData["Title"] = "Đăng nhập";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Đăng nhập bằng tài khoản của bạn</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Tên người dùng</label>
							<input asp-for="Username" class="form-control" />
							<span asp-validation-for="Username" class="text-danger" />
						</div>
						

						<div class="form-group">
							<label>Mật khẩu</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>

						
						<button  class="btn btn-default">Đăng nhập</button>
						<a asp-action="Create" asp-controller="Account">Tạo tài khoản mới</a>
					</form>
				
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
